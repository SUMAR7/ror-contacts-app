<%= form_with model: @contact, local: true, class: 'mb-5' do |form| %>

  <!--form.label is a rails helper method that creates a label for a form field-->
  <div class="field">
    <%= form.label :first_name, class: 'form-label'%>
    <!--form.text_field is a rails helper method that creates a text field for a form-->
    <%= form.text_field :first_name, class: 'form-text-input', placeholder: 'Enter first name'  %>
  </div>

  <div class="field">
    <%= form.label :last_name, class: 'form-label' %>
    <%= form.text_field :last_name, class: 'form-text-input', placeholder: 'Enter last name' %>
  </div>

  <div class="field">
    <%= form.label :email, class: 'form-label' %>
    <%= form.text_field :email, class: 'form-text-input', placeholder: 'Enter email address' %>
  </div>

  <div class="field">
    <%= form.label :phone, class: 'form-label' %>
    <%= form.text_field :phone, class: 'form-text-input', placeholder: 'Enter phone number' %>
  </div>

  <div class="actions">
    <!--form.submit is a rails helper method that creates a submit button for a form
    submitting the form will send a POST request to the url specified in the form_with method-->
    <%= form.submit 'Save', class: 'btn-primary' %>
  </div>
<% end %>
